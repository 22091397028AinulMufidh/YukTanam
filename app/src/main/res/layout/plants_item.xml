<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:padding="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_content_1"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/card_plants"
        android:padding="8dp">

        <!-- Name Plant -->
        <TextView
            android:id="@+id/name_plant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="@string/leon"
            android:textColor="@color/green_darker"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Heart Icon -->
        <ImageView
            android:id="@+id/favorite_plant"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_favorite"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/name_plant"
            app:layout_constraintBottom_toBottomOf="@id/name_plant"
            tools:ignore="ContentDescription" />

        <!-- Origin Plant -->
        <TextView
            android:id="@+id/origin_plant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@string/monstera"
            android:textColor="@color/green_normal_active"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_plant" />

        <!-- Plant Image -->
        <ImageView
            android:id="@+id/image_plant"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/sukulen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/origin_plant"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Card Content 2 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_content_2"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:background="@drawable/card_plants"
        android:padding="8dp">

        <!-- Name Plant -->
        <TextView
            android:id="@+id/name_plant2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="@string/leon"
            android:textColor="@color/green_darker"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Heart Icon -->
        <ImageView
            android:id="@+id/favorite_plant2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_favorite"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/name_plant2"
            app:layout_constraintBottom_toBottomOf="@id/name_plant2"
            tools:ignore="ContentDescription" />

        <!-- Origin Plant -->
        <TextView
            android:id="@+id/origin_plant2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@string/monstera"
            android:textColor="@color/green_normal_active"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_plant2" />

        <!-- Plant Image -->
        <ImageView
            android:id="@+id/image_plant2"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/sukulen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/origin_plant2"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
